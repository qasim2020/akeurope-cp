<div class="card mb-3" style="overflow-x: auto;">
  <div class="card-header d-flex justify-content-between">
    <h3 class="card-title">Active Subscriptions</h3>
  </div>
  {{#if data.payments}}
  <table class="table mb-0" style="white-space: nowrap; width: 100%;">
    <thead>
      <tr>
        <th>Payment #</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Expiry/ Renewel</th>
        <th>Customer</th>
      </tr>
    </thead>
    <tbody>
      {{#each data.payments}}
      <tr>
        <td><a href="/order/{{_id}}">{{orderNo}}</a></td>
        <td>{{formatDate createdAt}}</td>
        <td>
          {{#each entry.costs}}
          {{#if totalOrderedCost}}
          {{totalOrderedCost}} {{../currency}} per month in {{camelCaseToNormalString fieldName}} <br>
          {{/if}}
          {{/each}}
        </td>
        {{#if (eq monthlySubscription false)}}
        <td>Expires after {{project.months}} month(s) on {{expiresOn createdAt project.months}}</td>
        {{else}}
        <td>Renews on {{expiresOn createdAt project.months}}</td>
        {{/if}}
        <td><a href='/customer/{{customer._id}}'>{{customer.name}}</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <div class="card-body">
    <div class="text-center py-4">No payments found</div>
  </div>
  {{/if}}

</div>