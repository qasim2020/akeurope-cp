{{#with data.customer as |customer|}}
<div class="col-12 mb-auto mt-3" id="customer-container">

  <div class="card mb-3 data-row">
    <div class="card-header d-flex justify-content-between">
      <h3 class="card-title">Customer Information</h3>
      <button class="btn btn-primary cursor-pointer" data-bs-toggle="modal" data-bs-target="#modal-{{customer._id}}">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-pencil-plus">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M4 20h4l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4"></path>
          <path d="M13.5 6.5l4 4"></path>
          <path d="M16 19h6"></path>
          <path d="M19 16v6"></path>
        </svg>
        Edit Customer
      </button>
    </div>
    <div class="card-body">
      <div class="datagrid">

        <div class="datagrid-item">
          <div class="datagrid-title">Name</div>
          <div class="datagrid-content">
            <span>{{customer.name}}</span>
          </div>
        </div>

        <div class="datagrid-item">
          <div class="datagrid-title">Email</div>
          <div class="datagrid-content">
            <span>{{customer.email}}</span>
          </div>
        </div>

        <div class="datagrid-item">
          <div class="datagrid-title">Organization</div>
          <div class="datagrid-content">
            <span>{{customer.organization}}</span>
          </div>
        </div>

        <div class="datagrid-item">
          <div class="datagrid-title">Location</div>
          <div class="datagrid-content">
            <span>{{customer.location}}</span>
          </div>
        </div>

        <div class="datagrid-item">
          <div class="datagrid-title">Status</div>
          <div class="datagrid-content">
            <span>{{capitalizeFirstLetter customer.status}}</span>
          </div>
        </div>

        <div class="datagrid-item">
          <div class="datagrid-title">Email Status</div>
          <div class="datagrid-content">
            <span>{{customer.emailStatus}}</span>
          </div>
        </div>

        <div class="datagrid-item">
          <div class="datagrid-title">Projects</div>
          <div class="datagrid-content">
            {{#each customer.projectsOpened}}
            <span class="badge bg-blue-lt mb-1">{{this.name}}</span>
            {{/each}}
          </div>
        </div>

        <div class="datagrid-item">
          <div class="datagrid-title">Subscriptions</div>
          <div class="datagrid-content">
            {{#if customer.subscriptions}}
            <span>{{customer.subscriptions.length}}</span>
            {{else}}
            <span>0</span>
            {{/if}}
          </div>
        </div>

      </div>
    </div>

  </div>

</div>
{{/with}}