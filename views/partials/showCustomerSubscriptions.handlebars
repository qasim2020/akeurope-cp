<div class="card" id="active-subscriptions">
  <div class="card-header d-flex justify-content-between">
    <h3 class="card-title">Active Subscriptions</h3>
  </div>
  {{#if data.activeSubscriptions}}
  <div class="p-3">
    {{#each data.activeSubscriptions}}
    <div class="fs-5 text-uppercase mb-3 badge">{{this.project.name}}</div>
    <div class="row">
      {{#each this.entries as |ben|}}
      <a data-bs-toggle="popover" data-bs-placement="top" data-bs-trigger="hover focus" title="{{ben.entry.name}}"
        {{#if ben.expiry}}
        data-bs-html="true" data-bs-content="Subscribed One-time in Payment-{{ben.orderNo}} on {{formatDate ben.createdAt}}. <br> Subscription expires on <span class='text-red'>{{formatDate ben.expiry}}</span>."
        {{else}}
        data-bs-html="true" data-bs-content="Monthly subscribed in Payment-{{ben.orderNo}} on {{formatDate ben.createdAt}}. <br> Subscription renews on <span class='text-red'>{{formatDate ben.renewalDate}}</span>."
        {{/if}}
        class="cursor-pointer col-md-3 col-6 mb-3 text-center position-relative"
        href="/entry/{{ben.entry._id}}/project/{{../this.project.slug}}">
        <span class="position-absolute top-0 left-0 ti ti-check" style="padding-top: 3px"></span>
        <img class="img-fluid rounded-circle border border-1" alt="{{ben.entry.name}}"
          src="{{circleCloudinaryUrl (or ben.entry.photo (or ben.entry.photoOfChild ben.entry.photoOfOrphan))}}">
      </a>
      {{/each}}
    </div>
    {{/each}}
  </div>
  {{else}}
  <div class="card-body">
    <div class="text-center py-4">No subscriptions found</div>
  </div>
  {{/if}}
</div>