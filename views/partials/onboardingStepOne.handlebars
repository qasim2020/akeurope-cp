 <div class="col-lg-12 m-auto" id="onboarding-steps">
    <div class="card" id="data-container">
        <div class="card-header d-flex flex-column">
            <h3 class="col-auto">Customer Onboarding</h3>
            <div class="text-secondary">Once you are onboarded you will be taken to akeurope's dashboard where you can monitor progress reports and manage payments on your contributions.</div>
        </div>
        <div class="card-body">
            <ul class="steps steps-dark-green steps-counter my-4">
                <li class="step-item active">Select a project</li>
                <li class="step-item">Select subscriptions</li>
                <li class="step-item">Add payment details</li>
                <li class="step-item">Confirmation</li>
            </ul>
        </div>
        <div class="card-body">
            <div class="mb-3">
            <div class="form-selectgroup form-selectgroup-boxes d-flex flex-column select-project">
                {{#each data.projects}}
                <label class="form-selectgroup-item flex-fill">
                <input type="radio" name="select-project" value="{{this.slug}}" class="form-selectgroup-input">
                <div class="form-selectgroup-label d-flex align-items-center p-3">
                    <div class="me-3">
                    <span class="form-selectgroup-check"></span>
                    </div>
                    <div class="form-selectgroup-label-content d-flex align-items-center">
                    <span class="avatar me-3">{{getFirstTwoLetters this.name}}</span>
                    <div>
                        <div class="font-weight-medium">{{this.name}}</div>
                        <div class="text-secondary">{{this.entryCount}} x entries</div>
                    </div>
                    </div>
                </div>
                </label>
                {{/each}}
            </div>
            </div>
        </div>
        <div class="card-body">
            <ul class="pagination ">
                <li class="page-item page-next ">
                    <a class="page-link next cursor-pointer" data-url="/onboardingStepTwo/" onclick="selectSubscriptions(this)">
                        <div class="page-item-subtitle">next</div>
                        <div class="page-item-title">Select subscriptions</div>
                    </a>
                </li>
            </ul>
        </div>       
    </div>
</div>